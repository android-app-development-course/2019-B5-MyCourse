<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/borderBackground"
    android:orientation="vertical">
    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_dialog_course_type_title"
        style="@style/TextViewDialogTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBackground"
        android:padding="@dimen/spacing_10">

        <TextView
            style="@style/TextViewDialog"
            android:text="@string/dialog_course_type_name" />

        <EditText
            android:id="@+id/et_dialog_course_type_name"
            style="@style/EditTextDialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2"
        android:background="@color/lightBackground">

        <Button
            android:id="@+id/btn_dialog_course_type_cancel"
            style="@style/ButtonDialog"
            android:text="@string/btn_cancel" />

        <Button
            android:id="@+id/btn_dialog_course_type_ok"
            style="@style/ButtonDialog"
            android:text="@string/btn_ok" />
    </LinearLayout>
</LinearLayout>