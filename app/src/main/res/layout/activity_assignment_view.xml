<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".assignment.AssignmentViewActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBackground"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:stretchColumns="1">
        <!-- 学期 -->
        <TableRow style="@style/TableRowAttribute">

            <TextView
                style="@style/TextViewAttribute"
                android:text="@string/assignment_edit_semester" />

            <TextView
                android:id="@+id/tv_assignment_view_semester"
                style="@style/TextViewValue" />
        </TableRow>
        <!-- 课程名称 -->
        <TableRow style="@style/TableRowAttribute">

            <TextView
                style="@style/TextViewAttribute"
                android:layout_height="match_parent"
                android:text="@string/assignment_edit_course" />

            <TextView
                android:id="@+id/tv_assignment_view_course"
                style="@style/TextViewValue" />
        </TableRow>
        <!-- 作业标题 -->
        <TableRow style="@style/TableRowAttribute">

            <TextView
                style="@style/TextViewAttribute"
                android:text="@string/assignment_edit_title" />

            <TextView
                android:id="@+id/tv_assignment_view_title"
                style="@style/TextViewValue" />
        </TableRow>
        <!-- 截止时间 -->
        <TableRow style="@style/TableRowAttribute">

            <TextView
                style="@style/TextViewAttribute"
                android:text="@string/assignment_edit_time" />

            <TextView
                android:id="@+id/tv_assignment_view_time"
                style="@style/TextViewValue" />
        </TableRow>
        <!-- 作业内容 -->
        <TextView
            style="@style/TextViewAttribute"
            android:text="@string/assignment_edit_content" />

        <TextView
            android:id="@+id/tv_assignment_view_content"
            style="@style/TextViewValue"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:paddingStart="5dp" />
    </TableLayout>
</ScrollView>